.box {
  margin: 5px auto;
  position: relative;
  width: 95%;
  height: 190px;
  border-radius: 10%;
  box-shadow: 2px 2px 2px 2px #d4d0d0;
}
.word {
  border-radius: 5%;
  background-color: #f5ecf7;
  line-height: 40px;
  vertical-align: middle;
  position: absolute;
  height: 40px;
  width: 95%;
  left: 0;
  right: 0;
  margin: 0 auto;
  top: 10px;
  overflow: hidden;
}
.picture {
  position: absolute;
  top: 55px;
  left: 10px;
  width: 120px;
  height: 120px;
  overflow: hidden;
}
.interpretation {
  height: 120px;
  width: 60%;
  position: absolute;
  top: 55px;
  left: 141px;
  overflow: hidden;
}

